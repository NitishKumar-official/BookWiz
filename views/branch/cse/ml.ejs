<% layout("/layouts/boilerplate") %>

    <h1 class="card-title text-center mt-5"><b>Machine Learning</b></h1>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 offset-1 mt-5">   
        <% for(let book of allBooks){%>
                <div class="card text-bg-secondary mb-3" style="max-width: 23rem;">
                    <div class="card-header">ML</div>
                    <div class="card-body">
                      <h5 class="card-title"><%= book.title %></h5>
                      <p class="card-text"><%= book.quantity%>/left</p>
                      <div class="card-footer">
                        <a href="/books/<%= book._id %>" class="btn btn-light">Book Details</a>
                        <form action="/books/<%= book._id %>/cart" method="post" class="d-inline">
                            <button type="submit" class="btn btn-light">Add to Cart</button>
                        </form>
                    </div>
                    </div>
                  </div>
            <%}%>
</div>
