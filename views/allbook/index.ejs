<% layout("/layouts/boilerplate") %>

        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                font-family: 'Arial', sans-serif;
                background-color: #f8f9fa;
            }
            .card {
                margin-bottom: 1.5rem;
                transition: transform 0.2s;
            }
            .card:hover {
                transform: translateY(-5px);
            }
            .card-title {
                font-size: 1.25rem;
                font-weight: bold;
            }
            .card-text {
                font-size: 1rem;
            }
            .badge-custom {
                font-size: 0.9rem;
                background-color: #17a2b8;
                color: white;
                margin-right: 5px;
            }
            .btn-custom {
                width: 100%;
                margin-top: 5px;
            }
        </style>


        <div class="container mt-4">
            <h1 class="mb-4 text-center">All Books</h1>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
                <% for(let book of allBooks){ %>
                    <div class="col mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><%= book.title %></h5>
                                <p class="card-text"><%= book.subtitle %></p>
                                <p><span class="badge badge-custom">Branch:</span> <%= book.branch %></p>
                                <p><span class="badge badge-custom">Author:</span> <%= book.author %></p>
                                <p><span class="badge badge-custom">Quantity:</span> <%= book.quantity %></p>
                                <p><span class="badge badge-custom">Status:</span> <%= book.status %></p>
                            </div>
                            <div class="card-body card-body-buttons">
                                <form action="/books/<%= book._id %>" method="get" class="d-inline">
                                    <button class="btn btn-success btn-custom">View Book</button>
                                </form>
                                <form action="/books/<%= book._id %>/cart" method="post" class="d-inline">
                                    <button class="btn btn-danger btn-custom">Add to Cart</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    