<% layout("/layouts/boilerplate") %>

<style>
    .nav-item a{
        font-size: 1rem;
    }
    .form-group label{
        font-size: 1rem;
    }
</style>
 

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">


<div class="container mt-5">
    <h2 class="text-center">Sign Up</h2>
    <ul class="nav nav-tabs" id="loginTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="student-tab" data-toggle="tab" href="#student" role="tab" aria-controls="student" aria-selected="true">Student SignUp</a>
            </li>

            <li class="nav-item">
                <a class="nav-link" id="admin-tab" data-toggle="tab" href="#admin" role="tab" aria-controls="admin" aria-selected="false">Admin SignUp</a>
            </li>
 
    </ul>
    <div class="tab-content" id="loginTabContent">
        <div class="tab-pane fade show active" id="student" role="tabpanel" aria-labelledby="student-tab">
            <form id="studentLoginForm" class="mt-3" action="/signup" method="post" novalidate>
                <div class="form-group">
                    <label for="username">Student Registration No:</label>
                    <input type="text" name="username" class="form-control" id="username" placeholder="Enter your registration number" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Enter password" required>
                    <small class="form-text text-muted">
                        Must be at least 8 characters long, contain a number and a special character.
                    </small>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password" required>
                </div>
                <div className="form-group">
                    <label>Role:</label>
                    <div class="form-check">
                        <input type="radio" className="form-check-input" name="role" id="user" value="user" required />
                        <label className="form-check-label" htmlFor="user">User</label>
                    </div>
                </div>
                

                    <button type="submit" class="btn btn-primary">Sign Up</button>
    
            </form>
        </div>
        <div class="tab-pane fade" id="admin" role="tabpanel" aria-labelledby="admin-tab">
            <form id="adminLoginForm" class="mt-3" action="/signup" method="post" novalidate>
                <div class="form-group">
                    <label for="adminId">Admin Username:</label>
                    <input type="text" class="form-control" name="username" id="adminId" placeholder="Enter your admin ID" required>
                </div>
                <div class="form-group">
                    <label for="adminPassword">Password:</label>
                    <input type="password" name="password" class="form-control" id="adminPassword" placeholder="Enter password" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" id="email" placeholder="Enter Email" required>
                </div>
                <div class="form-group">
                    <label for="adminId">Admin ID:</label>
                    <input type="text" class="form-control" name="adminId" id="adminId" placeholder="Enter your admin ID" required>
                </div>
                <div className="form-group">
                    <label>Role:</label>
                    <div class="form-check">
                        <input type="radio" className="form-check-input" name="role" id="admin" value="admin" required />
                        <label className="form-check-label" htmlFor="admin">Admin</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a href="#" class="btn btn-link">Forgot Password?</a>
        <a href="/signin" class="btn btn-link">Sign In</a>
    </div>
</div>


 
