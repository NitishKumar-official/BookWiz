<% layout("/layouts/boilerplate") %>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<style>
  body {
    font-family: 'Arial', sans-serif;
  }

  .fixed-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 200px;
    background-color: #f8f9fa;
    border-right: 1px solid #dee2e6;
    padding-top: 60px;
    overflow-y: auto;
  }

  .main-content {
    margin-left: 200px; /* Adjust based on the width of the sidebar */
    padding: 20px;
  }
  @media (max-width: 1002px) {
    .card-deck {
      display: flex;
      flex-direction: column;
    }
    .card {
      margin-bottom: 20px;
    }
    .card-title {
      font-size: 18px; /* Adjusted font size for better readability */
    }
    .card-text {
      font-size: 16px;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .fixed-sidebar {
      width: 150px;
    }

    .main-content {
      margin-left: 150px;
    }

    .nav-link {
      font-size: 0.9rem;
    }

    .card-title {
      font-size: 1rem;
    }

    .card-text {
      font-size: 0.9rem;
    }

    #username {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 576px) {
    .fixed-sidebar {
      width: 100%;
      height: auto;
      position: relative;
      border-right: none;
      border-bottom: 1px solid #dee2e6;
    }

    .main-content {
      margin-left: 0;
      padding-top: 10px;
    }

    .navbar {
      padding: 10px;
    }

    .card-title, .card-text {
      font-size: 0.875rem;
    }

    .nav-item {
      text-align: center;
    }

    .nav-link {
      font-size: 0.875rem;
    }

    #username {
      font-size: 0.875rem;
    }
  }

  @media (max-width: 375px) {
    .navbar {
      flex-direction: column;
    }

    .show-span {
      margin-bottom: 10px;
    }

    .card-title {
      font-size: 0.8rem;
    }

    .card-text {
      font-size: 0.75rem;
    }
  }
</style>

<!-- Fixed Sidebar -->
<nav class="fixed-sidebar">
  <div class="sidebar-heading text-center"><h4>Admin Dashboard</h4></div>
  <ul class="nav flex-column">
    <li class="nav-item">
      <a class="nav-link active" href="/admin/<%= currUser.id %>/profile">
        Dashboard
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/books/new">
        Add new Book
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/student/search">
        Issue Book
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/student/search">
        Return Books
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">
        Manage Users
      </a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#">
        Manage Books
      </a>
    </li>
  </ul>
</nav>

<!-- Main Content -->
<div class="main-content">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="ml-auto show-span">
      <span id="username" class="mr-3">Welcome, <%= admin.username %></span>
      <a href="/logout" class="btn btn-danger" id="logout-btn">Logout</a>
    </div>
  </nav>
  <h1 class="mt-4">Library Admin Dashboard</h1>
  <p>Welcome to the library admin dashboard. Use the sidebar to navigate through the different sections.</p>
  
<!-- Overview Section -->
<h2>Overview</h2>
<div class="card-deck">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Total Books</h5>
      <p class="card-text">1,234</p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Total Users</h5>
      <p class="card-text">567</p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Books Issued</h5>
      <p class="card-text">89</p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Books Returned</h5>
      <p class="card-text">45</p>
    </div>
  </div>
</div>

<form action="/student/search" method="get">
  <button>Click</button>
</form>
